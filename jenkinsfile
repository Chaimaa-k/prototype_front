pipeline {
  agent 
  stages {
    stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Chaimaa-k/prototype_front.git'
            }
        }
    stage('Build & Test Frontend') {
            steps {
                    bat 'npm install'
                    bat 'npm run build --prod'  
                    // Optional: run tests
                   // bat 'npm run test -- --watch=false'
                    // Optional: linting
                   // bat 'npm run lint'
                }
            } 
  }
}